#include <stdio.h>
int main()
{
    int A, i, j,n, C=0;
    while(scanf("%d", &A) != EOF)
    {
        n = 1;
        C++;
        n += ((A*(A + 1)) / 2);
        if(A == 0) printf("Caso %d: %d numero\n", C, n);
        else printf("Caso %d: %d numeros\n", C, n);
        printf("0");
        for(i=1; i<=A; i++)
        {
            for(j=1; j<=i; j++)
                printf(" %d", i);
        }
        printf("\n\n");
    }
    return 0;
}
