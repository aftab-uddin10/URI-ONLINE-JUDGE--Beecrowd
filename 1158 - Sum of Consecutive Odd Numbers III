#include <stdio.h>

int main() {
 int N,X,Y,i,j,sum,s,a,b;
 scanf("%d",&N);
for(j=0;j<N;j++){
     scanf("%d %d",&X,&Y);{
     if(X%2 == 0){
         a=X+1;
         sum=0;
         for(i=0;i<Y;i++){
         sum=sum+a;
         a=a+2;}
         printf("%d\n",sum);
     }
     if(X%2 == 1) { 
         b=X;
         s=0;
         for(i=0;i<Y;i++) {
         s=s+b;
         b=b+2;}
         printf("%d\n",s);
     }
     }
}
    return 0;
}
